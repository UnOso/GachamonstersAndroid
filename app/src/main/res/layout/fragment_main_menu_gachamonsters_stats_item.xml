<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fragment_main_menu_gachamonsters_stats_name_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_main_menu_option_slider_item_image"
        app:layout_constraintTop_toTopOf="@id/fragment_main_menu_option_slider_item_image"
        tools:text="Attack:"/>

    <TextView
        android:id="@+id/fragment_main_menu_gachamonsters_stats_value_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_main_menu_option_slider_item_image"
        app:layout_constraintTop_toTopOf="@id/fragment_main_menu_option_slider_item_image"
        tools:text="180"/>

</LinearLayout>