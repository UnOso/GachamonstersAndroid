<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/fragment_main_menu_option_slider_item_image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_play_circle_filled_24" />

    <TextView
        android:id="@+id/fragment_main_menu_option_slider_item_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_main_menu_option_slider_item_image"
        app:layout_constraintTop_toTopOf="@id/fragment_main_menu_option_slider_item_image"
        tools:text="Play"/>

</LinearLayout>